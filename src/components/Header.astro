---
export interface Props {
  transparent?: boolean;
}

const { transparent = false } = Astro.props;
---

<header class={`fixed top-0 left-0 right-0 z-50 transition-all duration-300 ${
  transparent ? 'bg-transparent' : 'bg-white/95 backdrop-blur-md shadow-soft'
}`}>
  <div class="container-custom">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <div class="flex items-center space-x-2">
        <a href="/" class="flex items-center space-x-2 group">
          <!-- Logo Icon -->
          <div class="w-10 h-10 bg-gradient-to-br from-bubble-primary to-bubble-secondary rounded-lg flex items-center justify-center group-hover:scale-105 transition-transform duration-200">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <circle cx="12" cy="8" r="3" opacity="0.8"/>
              <circle cx="8" cy="14" r="2.5" opacity="0.6"/>
              <circle cx="16" cy="14" r="2.5" opacity="0.6"/>
              <circle cx="12" cy="18" r="1.5" opacity="0.4"/>
            </svg>
          </div>
          <!-- Logo Text -->
          <div class="hidden sm:block">
            <div class={`logo-text font-display font-bold text-xl leading-none ${
              transparent ? 'text-white' : 'text-bubble-primary'
            }`}>
              Bubbles
            </div>
            <div class={`logo-text font-display font-medium text-sm leading-none ${
              transparent ? 'text-bubble-light' : 'text-bubble-secondary'
            }`}>
              Enterprise
            </div>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-8">
        <a href="/" class={`nav-link font-medium transition-colors duration-200 hover:text-bubble-primary ${
          transparent ? 'text-white hover:text-bubble-light' : 'text-neutral-gray-700'
        }`}>
          Home
        </a>
        <a href="/services" class={`nav-link font-medium transition-colors duration-200 hover:text-bubble-primary ${
          transparent ? 'text-white hover:text-bubble-light' : 'text-neutral-gray-700'
        }`}>
          Services
        </a>
        <a href="/about" class={`nav-link font-medium transition-colors duration-200 hover:text-bubble-primary ${
          transparent ? 'text-white hover:text-bubble-light' : 'text-neutral-gray-700'
        }`}>
          About
        </a>
        <a href="/calculator" class={`nav-link font-medium transition-colors duration-200 hover:text-bubble-primary ${
          transparent ? 'text-white hover:text-bubble-light' : 'text-neutral-gray-700'
        }`}>
          Calculator
        </a>
        <a href="/certifications" class={`nav-link font-medium transition-colors duration-200 hover:text-bubble-primary ${
          transparent ? 'text-white hover:text-bubble-light' : 'text-neutral-gray-700'
        }`}>
          Certifications
        </a>
        <a href="/quote" class={`nav-link font-medium transition-colors duration-200 hover:text-bubble-primary ${
          transparent ? 'text-white hover:text-bubble-light' : 'text-neutral-gray-700'
        }`}>
          Contact
        </a>
      </nav>

      <!-- CTA Button -->
      <div class="hidden md:flex items-center space-x-4">
        <a href="tel:+1-407-715-1790" class={`phone-link font-medium transition-colors duration-200 ${
          transparent ? 'text-white hover:text-bubble-light' : 'text-neutral-gray-700 hover:text-bubble-primary'
        }`}>
          (407) 715-1790
        </a>
        <a href="/quote" class="btn-primary">
          Free Quote
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class={`lg:hidden p-2 rounded-lg transition-colors duration-200 ${
          transparent ? 'text-white hover:bg-white/10' : 'text-neutral-gray-700 hover:bg-neutral-gray-100'
        }`}
        aria-label="Toggle mobile menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="lg:hidden hidden absolute top-full left-0 right-0 bg-white shadow-xl border-t border-neutral-gray-200 z-50">
      <div class="py-6 px-4">
        <nav class="flex flex-col space-y-1">
          <a href="/" class="mobile-nav-link block px-4 py-3 text-neutral-gray-700 hover:text-bubble-primary hover:bg-bubble-light/10 rounded-lg font-medium transition-all duration-200">
            üè† Home
          </a>
          <a href="/services" class="mobile-nav-link block px-4 py-3 text-neutral-gray-700 hover:text-bubble-primary hover:bg-bubble-light/10 rounded-lg font-medium transition-all duration-200">
            üîß Services
          </a>
          <a href="/about" class="mobile-nav-link block px-4 py-3 text-neutral-gray-700 hover:text-bubble-primary hover:bg-bubble-light/10 rounded-lg font-medium transition-all duration-200">
            ‚ÑπÔ∏è About
          </a>
          <a href="/calculator" class="mobile-nav-link block px-4 py-3 text-neutral-gray-700 hover:text-bubble-primary hover:bg-bubble-light/10 rounded-lg font-medium transition-all duration-200">
            üßÆ Calculator
          </a>
          <a href="/certifications" class="mobile-nav-link block px-4 py-3 text-neutral-gray-700 hover:text-bubble-primary hover:bg-bubble-light/10 rounded-lg font-medium transition-all duration-200">
            üèÜ Certifications
          </a>
          <a href="/quote" class="mobile-nav-link block px-4 py-3 text-neutral-gray-700 hover:text-bubble-primary hover:bg-bubble-light/10 rounded-lg font-medium transition-all duration-200">
            üìû Contact
          </a>
          
          <div class="pt-4 mt-4 border-t border-neutral-gray-200">
            <a href="tel:+1-407-715-1790" class="mobile-phone-link block px-4 py-3 text-bubble-primary hover:text-bubble-dark font-semibold text-lg transition-colors duration-200">
              üì± (407) 715-1790
            </a>
            <div class="px-4 pt-3">
              <a href="/quote" class="btn-primary w-full text-center py-3 px-6 rounded-lg font-semibold transition-all duration-200 hover:shadow-lg">
                ‚ú® Get Free Quote
              </a>
            </div>
          </div>
        </nav>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });

  // Header background on scroll with text color fix
  document.addEventListener('DOMContentLoaded', function() {
    const header = document.querySelector('header');
    if (!header) return;
    
    const isTransparent = header.classList.contains('bg-transparent');
    if (!isTransparent) return;
    
    // Get all text elements that need color changes
    const logoText = header.querySelectorAll('.logo-text');
    const navLinks = header.querySelectorAll('.nav-link');
    const phoneLink = header.querySelector('.phone-link');
    const mobileMenuButton = header.querySelector('#mobile-menu-button');
    const mobileNavLinks = header.querySelectorAll('.mobile-nav-link');
    const mobilePhoneLink = header.querySelector('.mobile-phone-link');
    
    function updateHeader() {
      if (window.scrollY > 50) {
        // Change background
        header.classList.remove('bg-transparent');
        header.classList.add('bg-white/95', 'backdrop-blur-md', 'shadow-soft');
        
        // Update text colors for non-transparent state
        logoText.forEach(el => {
          el.classList.remove('text-white', 'text-bubble-light');
          el.classList.add('text-bubble-primary');
        });
        
        navLinks.forEach(el => {
          el.classList.remove('text-white', 'hover:text-bubble-light');
          el.classList.add('text-neutral-gray-700', 'hover:text-bubble-primary');
        });
        
        if (phoneLink) {
          phoneLink.classList.remove('text-white', 'hover:text-bubble-light');
          phoneLink.classList.add('text-neutral-gray-700', 'hover:text-bubble-primary');
        }
        
        if (mobileMenuButton) {
          mobileMenuButton.classList.remove('text-white', 'hover:bg-white/10');
          mobileMenuButton.classList.add('text-neutral-gray-700', 'hover:bg-neutral-gray-100');
        }
        
        mobileNavLinks.forEach(el => {
          el.classList.remove('text-white');
          el.classList.add('text-neutral-gray-700');
        });
        
        if (mobilePhoneLink) {
          mobilePhoneLink.classList.remove('text-white');
          mobilePhoneLink.classList.add('text-neutral-gray-700');
        }
        
      } else {
        // Change background
        header.classList.add('bg-transparent');
        header.classList.remove('bg-white/95', 'backdrop-blur-md', 'shadow-soft');
        
        // Update text colors for transparent state
        logoText.forEach(el => {
          el.classList.remove('text-bubble-primary');
          el.classList.add('text-white');
        });
        
        navLinks.forEach(el => {
          el.classList.remove('text-neutral-gray-700', 'hover:text-bubble-primary');
          el.classList.add('text-white', 'hover:text-bubble-light');
        });
        
        if (phoneLink) {
          phoneLink.classList.remove('text-neutral-gray-700', 'hover:text-bubble-primary');
          phoneLink.classList.add('text-white', 'hover:text-bubble-light');
        }
        
        if (mobileMenuButton) {
          mobileMenuButton.classList.remove('text-neutral-gray-700', 'hover:bg-neutral-gray-100');
          mobileMenuButton.classList.add('text-white', 'hover:bg-white/10');
        }
        
        mobileNavLinks.forEach(el => {
          el.classList.remove('text-neutral-gray-700');
          el.classList.add('text-white');
        });
        
        if (mobilePhoneLink) {
          mobilePhoneLink.classList.remove('text-neutral-gray-700');
          mobilePhoneLink.classList.add('text-white');
        }
      }
    }
    
    window.addEventListener('scroll', updateHeader);
  });
</script>