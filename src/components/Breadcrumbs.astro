---
export interface Props {
  items: Array<{
    name: string;
    url?: string;
  }>;
}

const { items } = Astro.props;

// Gera o Schema Markup para breadcrumbs
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    ...(item.url && { "item": `https://bubblesenterprise.com${item.url}` })
  }))
};
---

<!-- Schema Markup para Breadcrumbs -->
<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)}></script>

<!-- Breadcrumbs visuais -->
<nav aria-label="Breadcrumb" class="bg-gray-50 border-b border-gray-200">
  <div class="container mx-auto px-4 py-3">
    <ol class="flex items-center space-x-2 text-sm">
      {items.map((item, index) => (
        <li class="flex items-center">
          {index > 0 && (
            <svg class="w-4 h-4 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          )}
          {item.url ? (
            <a 
              href={item.url} 
              class="text-blue-600 hover:text-blue-800 hover:underline transition-colors"
              itemprop="item"
            >
              <span itemprop="name">{item.name}</span>
            </a>
          ) : (
            <span class="text-gray-700 font-medium" itemprop="name">
              {item.name}
            </span>
          )}
        </li>
      ))}
    </ol>
  </div>
</nav>

<style>
  /* Estilos para melhorar a acessibilidade */
  nav[aria-label="Breadcrumb"] {
    font-size: 0.875rem;
  }
  
  nav[aria-label="Breadcrumb"] a:focus {
    outline: 2px solid #3B82F6;
    outline-offset: 2px;
    border-radius: 2px;
  }
  
  /* Responsividade para dispositivos m√≥veis */
  @media (max-width: 640px) {
    nav[aria-label="Breadcrumb"] {
      font-size: 0.75rem;
    }
    
    nav[aria-label="Breadcrumb"] .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>