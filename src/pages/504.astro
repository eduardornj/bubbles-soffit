---
import BaseLayout from '../layouts/BaseLayout.astro';

// Security headers for error pages
Astro.response.headers.set('X-Content-Type-Options', 'nosniff');
Astro.response.headers.set('X-Frame-Options', 'DENY');
Astro.response.headers.set('X-XSS-Protection', '1; mode=block');
Astro.response.headers.set('Referrer-Policy', 'strict-origin-when-cross-origin');
Astro.response.headers.set('Content-Security-Policy', "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self';");
Astro.response.headers.set('Cache-Control', 'no-cache, no-store, must-revalidate');

// Set proper status code
Astro.response.status = 504;
---

<BaseLayout 
  title="504 - Gateway Timeout | Bubbles Enterprise"
  description="The gateway has timed out while trying to reach our servers. Please try again in a few moments."
>
  <main class="min-h-screen bg-gradient-to-br from-indigo-500/5 via-white to-purple-500/5 flex items-center justify-center px-4">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Error Icon -->
      <div class="mb-8">
        <div class="w-32 h-32 mx-auto bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center shadow-2xl animate-pulse-glow">
          <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>

      <!-- Error Content -->
      <div class="glass-hover rounded-3xl p-8 mb-8">
        <h1 class="text-6xl font-display font-bold text-indigo-600 mb-4">504</h1>
        <h2 class="text-3xl font-display font-semibold text-neutral-gray-800 mb-4">Gateway Timeout</h2>
        <p class="text-lg text-neutral-gray-600 mb-6 leading-relaxed">
          The gateway timed out while trying to reach our servers. 
          This is usually a temporary issue that resolves itself quickly.
        </p>
        
        <!-- Security Notice -->
        <div class="bg-indigo-50 border border-indigo-200 rounded-2xl p-4 mb-6">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-sm text-indigo-800 font-medium">Timeout Notice</p>
          </div>
          <p class="text-sm text-indigo-700 mt-2">
            This timeout occurred at the gateway level. Your request was safely terminated and no sensitive data was exposed.
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-6">
          <button onclick="window.location.reload()" class="btn-primary inline-flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            <span>Try Again</span>
          </button>
          <a href="/" class="btn-secondary inline-flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span>Return Home</span>
          </a>
        </div>
      </div>

      <!-- Troubleshooting Section -->
      <div class="text-center">
        <h3 class="text-xl font-display font-semibold text-neutral-gray-800 mb-4">Troubleshooting Steps</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="glass-hover rounded-2xl p-4">
            <svg class="w-8 h-8 text-bubble-primary mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h4 class="font-semibold text-neutral-gray-800 mb-2">Wait a Moment</h4>
            <p class="text-sm text-neutral-gray-600">Gateway timeouts usually resolve within 1-2 minutes.</p>
          </div>
          
          <div class="glass-hover rounded-2xl p-4">
            <svg class="w-8 h-8 text-bubble-primary mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path>
            </svg>
            <h4 class="font-semibold text-neutral-gray-800 mb-2">Check Connection</h4>
            <p class="text-sm text-neutral-gray-600">Ensure your internet connection is stable and working.</p>
          </div>
          
          <div class="glass-hover rounded-2xl p-4">
            <svg class="w-8 h-8 text-bubble-primary mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <h4 class="font-semibold text-neutral-gray-800 mb-2">Contact Support</h4>
            <p class="text-sm text-neutral-gray-600">Still having issues? Call (407) 715-1790 for help.</p>
          </div>
        </div>
      </div>

      <!-- Technical Information -->
      <div class="mt-8 text-center">
        <div class="glass-hover rounded-2xl p-6">
          <h4 class="font-semibold text-neutral-gray-800 mb-3">What Causes Gateway Timeouts?</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-neutral-gray-600">
            <div class="text-left">
              <ul class="space-y-2">
                <li class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-bubble-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>High server load</span>
                </li>
                <li class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-bubble-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Network connectivity issues</span>
                </li>
              </ul>
            </div>
            <div class="text-left">
              <ul class="space-y-2">
                <li class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-bubble-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Temporary server maintenance</span>
                </li>
                <li class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-bubble-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Heavy traffic periods</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<script>
  // Security: Log gateway timeout for monitoring
  console.error('504 Gateway Timeout - Gateway response timeout detected');
  
  // Security: Clear any sensitive data from URL
  if (window.location.search || window.location.hash) {
    const url = new URL(window.location);
    url.search = '';
    url.hash = '';
    window.history.replaceState({}, document.title, url.pathname);
  }
  
  // Security: Clear any pending requests that might have timed out
  if (typeof AbortController !== 'undefined') {
    window.addEventListener('beforeunload', () => {
      if (window.activeRequests) {
        window.activeRequests.forEach(controller => {
          try {
            controller.abort();
          } catch (e) {
            // Ignore abort errors
          }
        });
      }
    });
  }
  
  // Security: Clear any cached data that might be related to the timeout
  if ('caches' in window) {
    caches.keys().then(names => {
      names.forEach(name => {
        if (name.includes('timeout') || name.includes('504') || name.includes('gateway')) {
          caches.delete(name);
        }
      });
    });
  }
  
  // Security: Clear any authentication tokens that might be invalid due to timeout
  try {
    // Clear potentially expired session data
    const timeoutKeys = ['temp', 'pending', 'processing'];
    timeoutKeys.forEach(key => {
      localStorage.removeItem(key);
      sessionStorage.removeItem(key);
    });
  } catch (e) {
    // Storage access might be restricted
  }
  
  // Auto-retry mechanism with exponential backoff
  let retryCount = 0;
  const maxRetries = 3;
  
  function autoRetry() {
    if (retryCount < maxRetries) {
      retryCount++;
      const delay = Math.pow(2, retryCount) * 1000; // Exponential backoff: 2s, 4s, 8s
      
      setTimeout(() => {
        console.log(`Auto-retry attempt ${retryCount}/${maxRetries}`);
        window.location.reload();
      }, delay);
    }
  }
  
  // Start auto-retry after 30 seconds
  setTimeout(autoRetry, 30000);
</script>