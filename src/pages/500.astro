---
import BaseLayout from '../layouts/BaseLayout.astro';
import mysqlSecurityLogger from '../utils/mysqlSecurityLogger.js';

export const prerender = false;

// Configurar headers de segurança
Astro.response.headers.set('Content-Security-Policy', "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https://fonts.gstatic.com; connect-src 'self';");
Astro.response.headers.set('X-Frame-Options', 'DENY');
Astro.response.headers.set('X-Content-Type-Options', 'nosniff');
Astro.response.headers.set('Referrer-Policy', 'strict-origin-when-cross-origin');

// Definir status 500
Astro.response.status = 500;

// Capturar informações da requisição
const requestInfo = {
  url: Astro.url.pathname + Astro.url.search,
  userAgent: Astro.request.headers.get('user-agent') || 'Unknown',
  referer: Astro.request.headers.get('referer') || 'Direct',
  clientIP: Astro.request.headers.get('x-forwarded-for')?.split(',')[0]?.trim() ||
    Astro.request.headers.get('x-real-ip') ||
    Astro.request.headers.get('cf-connecting-ip') ||
    'Unknown',
  timestamp: new Date().toISOString(),
  method: Astro.request.method
};

// Log do erro 500 no MySQL
try {
  await mysqlSecurityLogger.logSecurityEvent({
    event_type: 'error_500',
    severity: 'high',
    source_ip: requestInfo.clientIP,
    user_agent: requestInfo.userAgent,
    request_path: requestInfo.url,
    details: JSON.stringify({
      error_type: 'Internal Server Error',
      timestamp: requestInfo.timestamp,
      method: requestInfo.method,
      referer: requestInfo.referer
    })
  });
  console.log('✅ 500 error logged successfully');
} catch (error) {
  console.error('❌ Failed to log 500 error:', error.message);
}
---

<BaseLayout 
  title="500 - Internal Server Error | Bubbles Enterprise"
  description="Internal server error page - our technical team has been notified."
  keywords="error, 500, internal server error, bubbles enterprise"
>
  <main class="min-h-screen bg-gradient-to-br from-bubble-primary via-purple-600 to-indigo-800 flex items-center justify-center px-4 py-8">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Error Code -->
      <div class="mb-8">
        <h1 class="text-9xl font-black text-white mb-4 drop-shadow-2xl animate-pulse">
          500
        </h1>
        <div class="h-1 w-32 bg-gradient-to-r from-red-400 to-red-600 mx-auto rounded-full mb-6"></div>
      </div>

      <!-- Error Content -->
      <div class="glass-card rounded-3xl p-8 mb-8">
        <div class="mb-6">
          <svg class="w-16 h-16 text-red-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          <h2 class="text-3xl font-display font-bold text-neutral-gray-800 mb-4">
            Internal Server Error
          </h2>
          <p class="text-lg text-neutral-gray-600 mb-6 leading-relaxed">
            Oops! Something went wrong on our server. Our technical team has been notified and is working to fix this issue as quickly as possible.
          </p>
        </div>

        <!-- Security Notice -->
        <div class="bg-orange-50 border border-orange-200 rounded-2xl p-4 mb-6">
          <div class="flex items-center justify-center space-x-2 mb-2">
            <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            <p class="text-sm text-orange-800 font-medium">System Notice</p>
          </div>
          <p class="text-sm text-orange-700">
            This error has been logged and our technical team has been notified. No sensitive information has been exposed.
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-6">
          <button onclick="window.location.reload()" class="btn-primary inline-flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            <span>Try Again</span>
          </button>
          <a href="/" class="btn-secondary inline-flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span>Return Home</span>
          </a>
        </div>
      </div>

      <!-- Help Section -->
      <div class="text-center">
        <h3 class="text-xl font-display font-semibold text-white mb-4">What Can You Do?</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="glass-hover rounded-2xl p-4">
            <svg class="w-8 h-8 text-white mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h4 class="font-semibold text-white mb-2">Wait a Moment</h4>
            <p class="text-sm text-gray-200">The issue may be temporary. Try refreshing in a few minutes.</p>
          </div>
          
          <div class="glass-hover rounded-2xl p-4">
            <svg class="w-8 h-8 text-white mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
