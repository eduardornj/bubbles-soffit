            <p class="text-sm text-gray-200">Contact us at (407) 715-1790 for immediate assistance.</p>
          </div>
          
          <div class="glass-hover rounded-2xl p-4">
            <svg class="w-8 h-8 text-white mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <h4 class="font-semibold text-white mb-2">Email Support</h4>
            <p class="text-sm text-gray-200">Send us an email at contact@bubblesenterprise.com</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<script>
  // Security: Log server error for monitoring (without exposing sensitive details)
  console.error('500 Internal Server Error - Server-side issue detected');
  
  // Security: Clear any sensitive data from URL
  if (window.location.search || window.location.hash) {
    const url = new URL(window.location);
    url.search = '';
    url.hash = '';
    window.history.replaceState({}, document.title, url.pathname);
  }
  
  // Security: Generate error ID for tracking (without exposing system details)
  const errorId = 'ERR-' + Date.now().toString(36).toUpperCase();
  console.log('Error ID for support reference:', errorId);
  
  // Security: Prevent error details from being cached
  if ('caches' in window) {
    caches.keys().then(names => {
      names.forEach(name => {
        if (name.includes('error') || name.includes('500')) {
          caches.delete(name);
        }
      });
    });
  }
</script>