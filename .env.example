# Environment Configuration for Bubbles Enterprise
# Copy this file to .env and update with your actual values

# Email Configuration
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@bubblesenterprise.com
TO_EMAIL=contact@bubblesenterprise.com

# Alternative Email Services (uncomment to use)
# SENDGRID_API_KEY=your-sendgrid-api-key
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-mailgun-domain

# Security Configuration
CSRF_SECRET=your-csrf-secret-key-here
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
FORM_RATE_LIMIT_MAX=3
FORM_RATE_LIMIT_WINDOW=60000

# AI Security Configuration (2025 Advanced Protection)
AI_SECURITY_ENABLED=true
AI_DETECTION_THRESHOLD=0.7
BEHAVIOR_ANALYSIS_ENABLED=true
ADMIN_SECURITY_KEY=your-admin-security-key-2025
SECURITY_LOG_LEVEL=INFO
THREAT_PATTERN_TRACKING=true

# File Upload Configuration
MAX_FILE_SIZE=5242880
MAX_FILES_PER_UPLOAD=10
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp
UPLOAD_DIR=./public/uploads

# Application Configuration
APP_NAME="Bubbles Enterprise"
APP_URL=http://localhost:4321
APP_ENV=development

# Business Information
BUSINESS_NAME="Bubbles Enterprise"
BUSINESS_PHONE="(407) 715-1790"
BUSINESS_EMAIL="contact@bubblesenterprise.com"
BUSINESS_ADDRESS="Orlando, FL"

# Analytics and Tracking (optional)
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# FACEBOOK_PIXEL_ID=your-facebook-pixel-id
# HOTJAR_ID=your-hotjar-id

# Database Configuration (if needed for future features)
# DATABASE_URL=your-database-connection-string
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=bubbles_enterprise
# DB_USER=your-db-user
# DB_PASS=your-db-password

# API Keys (if needed for integrations)
# RECAPTCHA_SITE_KEY=your-recaptcha-site-key
# RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
# STRIPE_PUBLIC_KEY=your-stripe-public-key
# STRIPE_SECRET_KEY=your-stripe-secret-key

# Advanced Bot Protection
BOT_DETECTION_ENABLED=true
BOT_CHALLENGE_THRESHOLD=0.8
IP_REPUTATION_CHECK=true
USER_AGENT_ANALYSIS=true

# Content Analysis
AI_CONTENT_DETECTION=true
CONTENT_SIMILARITY_THRESHOLD=0.85
LANGUAGE_PATTERN_DETECTION=true
DEEPFAKE_DETECTION=false

# Monitoring and Logging
SECURITY_MONITORING_ENABLED=true
LOG_RETENTION_DAYS=30
ALERT_WEBHOOK_URL=your-alert-webhook-url
SECURITY_DASHBOARD_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Development Configuration
DEV_SERVER_PORT=4321
DEV_SERVER_HOST=localhost
HOT_RELOAD=true